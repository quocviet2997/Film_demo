<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes> <!-- không apply bất kì giao diện gì -->
        <pattern>/api*</pattern>
    </excludes>

    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="decorators/admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="web" page="decorators/web.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name="login" page="decorators/login.jsp">
        <pattern>/login*</pattern>
    </decorator>
</decorators>